<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sjf.lgcats.LoadingActivity"
    tools:showIn="@layout/activity_loading"
    android:id="@+id/loading_activity_constraint_layout">

    <TextView
        android:id="@+id/loading_screen_day_type_label"
        android:layout_width="334dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="It's a Black Day!"
        android:textSize="30sp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/loading_screen_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/loading_screen_title"
        android:layout_width="257dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="LG CATS"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/initial_loading_spinner"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:backgroundTint="@color/white"
        android:layout_width="138dp"
        android:layout_height="102dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="51dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_screen_day_type_label" />

</android.support.constraint.ConstraintLayout>
