<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sjf.lgcats.LoadingActivity"
    tools:showIn="@layout/activity_loading">

    <TextView
        android:id="@+id/orange_black_day_display"
        android:layout_width="197dp"
        android:layout_height="40dp"
        android:text="OrangeBlackDayDisplay"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/initial_loading_spinner"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todays_date" />

    <TextView
        android:id="@+id/todays_date"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="TodaysDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/orange_black_day_display"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <ProgressBar
        android:id="@+id/initial_loading_spinner"
        android:layout_width="138dp"
        android:layout_height="102dp"
        android:progressDrawable="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange_black_day_display"
        app:layout_constraintBottom_toTopOf="@+id/temporary_button" />

    <Button
        android:id="@+id/temporary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in_short"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/initial_loading_spinner" />

</android.support.constraint.ConstraintLayout>
